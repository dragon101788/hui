mainmenu "HUI Configuretion"


comment "------------HUI Configuretion---------"

config  USING_FONT
        bool "Using TTF Font"

config  REVERSE_SCREEN
        bool "reverse screen to 180 degree"

choice 
        prompt "alpha channel render"
        default ALPHA_SOFT
        help
		select alpha channel render
config ALPHA_SOFT
        bool "Soft Alpha"
        help
		soft
config ALPHA_BLT
        bool "Nuvoton 2D Blitting Accelerator"
        help
		2d Bltting
endchoice

config  FB_SOFT_RGB565
        bool "FrameBuffer Soft Rgb565 output"
choice 
        prompt "Touch Panel Device"
        default TOUCH_NONE
        help
		select alpha channel render
config TOUCH_NONE
        bool "none"
        help
		soft
config TOUCH_EKTF2K
        bool "ektf2k"
        help
		2d Bltting
config TOUCH_TSLIB
        bool "tslib"
        help
		use tslib		
endchoice
choice 
        prompt "Keypad Device"
        default Keypad_NONE
        help
		select keypad devices
config KEYPAD_NONE
        bool "none"
        help
		no keypad
config  KEYPAD_LITTLESWAN
        bool "keypad littleSwan"
        help
		enable keypad littleSwan
endchoice
config DEBUG
	bool "enable debug"
choice 
        prompt "debug  log level"
        default LOG_I
        help
		select log msg level
config LOG_I
        bool "log_i"
        help
		enable log_i,log_w,log_s,log_e
config LOG_W
        bool "log_w"
        help
		enable log_w,log_s,log_e
config LOG_S
        bool "log_s"
        help
		enable log_s,log_e
config LOG_E
        bool "log_e"
        help
		enable log_e
config LOG_NONE
        bool "none "
        help
		none log msg print
endchoice

comment "------------Dragon Auto Configuretion---------"
source Kconfig.auto
